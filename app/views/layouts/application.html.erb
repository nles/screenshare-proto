<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="chrome-webstore-item" href="https://chrome.google.com/webstore/detail/dbkiolhkacgipikjnjncjifknfmfogom">
    <script src="http://api.turnservers.com/api.js?key=ncroFaRnFZwFsUgyTkuUbQiWpnxWUOqM"></script>

    <title><%= content_for?(:title) ? yield(:title) : t('service_name') %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="action-bar">
      <div id="action-bar-area">
        <div id="feedback-button" class="action-bar-item right action-bar-dialog" title="<%= t('menu.feedback_tooltip') %>">
          <a class="action-bar-link"><%= t('menu.feedback') %></a>
          <div class="action-bar-icon"></div>
        </div>
        <div id="faq-button" class="action-bar-item right action-bar-dialog" title="<%= t('menu.faq_tooltip') %>">
          <a class="action-bar-link"><%= t('menu.faq') %></a>
          <div class="action-bar-icon"></div>
        </div>
        <!--
        <div id="share-button" class="action-bar-item right action-bar-dialog" title="<%= t('menu.share_tooltip') %>">
          <a class="action-bar-link"><%= t('menu.share') %></a>
          <div class="action-bar-icon"></div>
        </div>
      -->
        <div id="email-button" class="action-bar-item right action-bar-dialog" title="<%= t('menu.button_tooltip') %>">
          <a href="/"  class="action-bar-link"><%= t('menu.button') %></a>
          <div class="action-bar-icon"></div>
        </div>

        <div id="language-select">
          <a href="/"><img src="<%= image_path('logo30.png') %>" alt="home" />teleportingScreen</a>
          <a href="/?lang=en"><img src="<%= image_path('gb.png') %>" alt="en" /></a>
          <a href="/?lang=fi"><img src="<%= image_path('fi.png') %>" alt="fi" /></a>
        </div>
      </div>
    </div>
  </div>

  <div id="has-support-body" style="display:none;">
    <%= yield %>
  </div>
  <div id="no-support-body" style="display:none;">
    <div class="row">
      <div class="columns medium-4 medium-centered text-center">
        <br /><br />
        <h4>Unfortunately your browser is unsupported</h4>
        <p>Try <a href="https://www.google.com/chrome/browser/desktop/index.html" target="_blank">Google Chrome</a> or <a href="https://download-chromium.appspot.com/" target="_blank">Chromium</a></p>
      </div>
    </div>
  </div>

  <%= javascript_include_tag "application" %>
  <%= yield :javascripts %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-59887049-1', 'auto');
    ga('send', 'pageview');

  </script>
  </body>
</html>
